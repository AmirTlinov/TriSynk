{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TriSynk Frontend IR",
  "type": "object",
  "required": ["module", "language", "functions", "abi"],
  "properties": {
    "module": {"type": "string"},
    "language": {"type": "string", "enum": ["rust", "cpp"]},
    "functions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "effects", "resources"],
        "properties": {
          "name": {"type": "string"},
          "effects": {
            "type": "array",
            "items": {"type": "string"}
          },
          "resources": {
            "type": "object",
            "additionalProperties": {"type": "string"}
          }
        }
      }
    },
    "abi": {
      "type": "object",
      "required": ["calling_convention"],
      "properties": {
        "calling_convention": {"type": "string"},
        "capabilities": {
          "type": "array",
          "items": {"type": "string"}
        },
        "layout_hash": {"type": ["integer", "string"]}
      }
    }
  }
}
